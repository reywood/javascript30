{
    "root": true,
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "env": {
        "browser": true
    },
    "rules": {
        "indent": ["error", 4],
        "no-console": 0,
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
    }
}
